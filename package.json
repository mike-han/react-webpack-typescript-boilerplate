{
  "name": "react-editor-test",
  "version": "1.0.0",
  "description": "A quill-based react component that controls the editor via custom plugins.",
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "module": "dist/esm/index.js",
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf dist &&  && webpack --node-env=production && npm run build:esm",
    "build:esm": "cross-env ESM=true webpack --node-env=production",
    "tscheck": "cross-env TSCHECK=true webpack --node-env=development",
    "lint": "eslint ./src --ext .ts,.tsx,.js",
    "lint:fix": "npm run lint --fix",
    "release": "standard-version"
  },
  "keywords": [
    "react",
    "react-component",
    "rich",
    "text",
    "rich-text",
    "textarea",
    "quill",
    "plugin"
  ],
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "publishConfig": {
    "@mike-han/registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mike-han/react-editor.git"
  },
  "author": "mike",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mike-han/react-editor/issues"
  },
  "homepage": "https://github.com/mike-han/react-editor#readme",
  "dependencies": {
    "eslint-config-prettier": "^8.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/fork-ts-checker-webpack-plugin": "^0.4.5",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fork-ts-checker-webpack-plugin": "^7.2.1",
    "husky": "^7.0.4",
    "prettier": "2.5.1",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "peerDependencies": {
    "react": "v17.0.2"
  }
}