{
  "name": "react-webpack-typescript-boilerplate",
  "version": "1.0.0",
  "description": "An open source library boilerplate based on react webpack and typescript.",
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf dist && tsc && webpack --node-env=production",
    "tscheck": "cross-env TSCHECK=true webpack --node-env=development",
    "lint": "eslint ./src --ext .ts,.tsx,.js",
    "lint:fix": "npm run lint --fix",
    "release": "standard-version",
    "test": "jest"
  },
  "keywords": [
    "react",
    "react-component",
    "typescript",
    "webpack",
    "boilerplate"
  ],
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mike-han/react-webpack-typescript-boilerplate.git"
  },
  "author": "mike",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mike-han/react-webpack-typescript-boilerplate/issues"
  },
