{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": ["tsconfig.json"],
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "JSX": true
    },
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript"
    ],
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "no-use-before-define": "off",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "react/prop-types": "off",
        "semi": ["error", "never"],
        "quotes": ["error", "single"]
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect"
        }
    }
}